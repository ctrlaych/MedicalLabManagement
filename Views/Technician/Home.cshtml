@{
    Layout = null;
}

@using DBLP
@model DBLP.Models.Tech

<!DOCTYPE html>
<html>
<link rel="shortcut icon" href="~/admin.ico">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Homepage - Admin</title>
    <link href="/Content/site.css" rel="stylesheet" />

    <script src="/Scripts/modernizr-2.6.2.js"></script>

</head>
<head>
    <script src="/Scripts/JavaScript2.js" type="text/javascript"></script>
    <link rel="stylesheet" href="~/Content/Style.css">
</head>
<body>
    <header>
        <div>
            <div>
                <ul>
                    <li style="margin-left: 78px;"><a id="len1" class="hoverable" href="@Url.Action("Home","Technician")">Home</a></li>
                    <li>
                        <a id="len2" class="hoverable" href="#">View</a>
                        <ul>
                            <li><a id="op1" class="hoverable" href="@Url.Action("viewclient","Technician")">Clients</a></li>
                            <li><a id="op2" class="hoverable" href="@Url.Action("viewTech","Technician")">Technicians</a></li>
                            <li><a id="op3" class="hoverable" href="@Url.Action("viewtest","Technician")">Tests</a></li>
                            <li><a id="op4" class="hoverable" href="@Url.Action("viewappointment","Technician")">Appointments</a></li>
                            <li><a id="op5" class="hoverable" href="@Url.Action("viewpayments","Technician")">Payments</a></li>
                        </ul>
                    </li>
                    <li><a id="len4" class="hoverable" href="@Url.Action("Tsignup","Technician")">Hire Tech</a></li>
                    <li><a id="len7" class="hoverable" href="@Url.Action("addtest","Technician")">Add Test</a></li>
                    <li>
                        <a id="len9" class="hoverable">Deactivate</a>
                        <ul>
                            <li><a id="opp1" class="hoverable" href="@Url.Action("deactiveclient","Technician")">Client</a></li>
                            <li><a id="opp2" class="hoverable" href="@Url.Action("deactivetech","Technician")">Technician</a></li>
                            <li><a id="opp3" class="hoverable" href="@Url.Action("deactivetest","Technician")">Tests</a></li>
                        </ul>
                    </li>
                    <li>
                        <a id="len10" class="hoverable" href="#">Activate</a>
                        <ul>
                            <li><a id="oppp1" class="hoverable" href="@Url.Action("activeclient","Technician")">Client</a></li>
                            <li><a id="oppp2" class="hoverable" href="@Url.Action("activetech","Technician")">Technician</a></li>
                            <li><a id="oppp3" class="hoverable" href="@Url.Action("activetest","Technician")">Tests</a></li>
                        </ul>
                    </li>

                </ul>
                <div>
                    <form method="post" action="../Technician/logout">
                        <input type="submit" id="logout" value="logout">
                    </form>
                </div>
            </div>
            <div class="page-title">
                <h2 style="display:inline-block">Administrator</h2>
            </div>

        </div>
    </header>
    <style>
        body {
            background-image: url(https://images.unsplash.com/photo-1581594549595-35f6edc7b762?ixlib=rb-1.2.1&auto=format&fit=crop&w=1500&q=80);
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: 100% 130%;
        }
    </style>

    <div class="rowfirst">
        <div class="rowitem">
            <h3> Personal Information</h3>
        </div>
        <div class="originalinfo">
            <div class="columnspan">
                <p> <span style="font-weight: 300; margin-left: -5%;"><b> Name</b> :</span> <span> @Model.firstname @Model.lastname  </span>  </p>
                <p> <span style="font-weight: 300; margin-left: -74px;"><b> Gender : </b></span> @Model.gender <span> </span> </p>
            </div>
            <div class="columnspan">
                <p> <span style="font-weight: 300;margin-left: -75%;"><b> Age : </b></span> <span> @Model.age </span> </p>
                <p> <span style="font-weight: 300; margin-left: -68%"><b> City : </b></span> <span> Lahore </span></p>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="rowitem">
            <h3> Contact </h3>
        </div>
        <div class="originalinfo" style="height:72px;">
            <div class="columnspan">
                <p> <span style="font-weight: 300;"><b> Address : </b></span> <span> @Model.address  </span>  </p>
            </div>
            <div class="columnspan">
                <p> <span style="font-weight: 300; margin-left: -40%;"><b> Phone Number : </b></span> <span> @Model.phone_number </span></p>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="rowitem">
            <h3> Technical information</h3>
        </div>
        <div class="originalinfo" style="height:72px;">
            <div class="columnspan">
                <p> <span style="font-weight: 300;margin-left: 6%;"><b> Tech Post : </b></span> <span> @Model.info </span>  </p>
            </div>
            <div class="columnspan">
                <p> <span style="font-weight: 300; margin-left: -15%;"><b> Account Creation Date : </b></span> <span> @Model.hire_date </span></p>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="rowitem">
            <h3> Account Information</h3>
        </div>
        <div class="originalinfo">
            <div class="columnspan">
                <p> <span style="font-weight: 300;     margin-left: -3%;"><b> Username : </b></span> <span style="text-transform:none;"> @Model.username  </span>  </p>
                <p> <span style="font-weight: 300; margin-left: 56px; "><b> Email : </b></span> <span style="text-transform:none;"> @Model.email </span> </p>
            </div>
            <div class="columnspan">
                <p> <span style="font-weight: 300;margin-left: -57%; "><b> Password : </b></span> <span style="text-transform:none;"> @Model.password </span> </p>
            </div>
        </div>
    </div>
</body>
</html>

