@{
    Layout = null;
}

@using DBLP.Models;
@model List<allClient>
<!DOCTYPE html>
<html>
<link rel="shortcut icon" href="~/admin.ico">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Patients - Admin</title>
    <script src="/Scripts/table.js" type="text/javascript"></script>
    <link rel="stylesheet" href="/Content/table.css">
</head>
<body>
    <h1><b><big>All Patients</big></b></h1>
    @if (Model.Count > 0)
    {
        <div class="tbl-header">
            <table id="example" cellpadding="0" cellspacing="0" border="0">
                <thead><tr><td style="width: 25px;">Index</td><td>Client ID</td> <td>Name</td> <td>Email</td><td>Phone Number</td><td>Status</td> </tr></thead>
            </table>
        </div>
        <div class="tbl-content">
            <table id="example" cellpadding="0" cellspacing="0" border="0">
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        int x = i + 1;
                        <tr>
                            <td style="width: 25px;">@x</td>
                            <td>@Model[i].id</td>
                            <td>@Model[i].firstname @Model[i].lastname</td>
                            <td>@Model[i].email</td>
                            <td>@Model[i].phone_number</td>
                            <td>@Model[i].status</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p style="color:white"> There are No Clients</p>
    }
    <style>
        body {
            background-image: url(https://images.unsplash.com/photo-1581594549595-35f6edc7b762?ixlib=rb-1.2.1&auto=format&fit=crop&w=1500&q=80);
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: 100% 130%;
        }
    </style>
    <form method="post" action="../Technician/Home">
        <br />
        <br />
        <input type="submit" id="return" style="margin-left:48%" value="Return">
    </form>
</body>
</html>
