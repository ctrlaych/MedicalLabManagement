@{
    Layout = null;
}

@using DBLP.Models;
@model List<c_appointment>
<!DOCTYPE html>
<html>
<link rel="shortcut icon" href="~/patient.ico">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Old Reports - Patient</title>
    <script src="/Scripts/table.js" type="text/javascript"></script>
    <link rel="stylesheet" href="/Content/table.css">
</head>
<body>
    <h1><b><big>Old Rports</big></b></h1>
    @if (Model.Count > 0)
    {
        <div class="tbl-header">
            <table id="example" cellpadding="0" cellspacing="0" border="0">
                <thead><tr><td style="width: 25px;">Index</td><td>Test Name</td><td>Appointment Time</td><td>Appointment Date</td></tr></thead>
            </table>
        </div>
        <div class="tbl-content">
            <table id="example" cellpadding="0" cellspacing="0" border="0">
                <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        int x = i + 1;
                        <tr>
                            <td style="width: 25px;">@x</td>
                            <td>@Model[i].test_name</td>
                            <td>@Model[i].ap_time</td>
                            <td>@Model[i].date</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <p style="color:white"> There are no old reports to be viewed</p>
    }
    <style>
        body {
            background-image: url(https://cdn.pixabay.com/photo/2013/07/18/10/56/microbiology-163521_960_720.jpg);
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: 100% 130%;
        }
    </style>
    <form method="post" action="../client/homePage">
        <br />
        <br />
        <input type="submit" id="return" style="margin-left:48%" value="Return">
    </form>
</body>
</html>
