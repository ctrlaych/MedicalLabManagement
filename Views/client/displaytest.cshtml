@{
    Layout = null;
}

@using DBLP.Models;

@model List<displaytest>
<!DOCTYPE html>
<html>
<link rel="shortcut icon" href="~/patient.ico">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Display Test - Patient</title>
    <script src="/Scripts/table.js" type="text/javascript"></script>
    <link rel="stylesheet" href="/Content/table.css">
</head>
<body>
    <h1><b><big>Book Appointment</big></b></h1>
    @if (Model.Count > 0)
    {
        <h2><b style="color:white">Choose Test</b></h2>
            <div style="height:400px">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <a href="../client/appointback"><button class="button1" onclick="choosingtest('@Model[i].name')">@Model[i].name</button></a>
                    <br />
                    <br />
                }
            </div>
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
            <script>

            function choosingtest(name) {
                //location.href = name;
                $.ajax({
                    type: "GET",
                    url: '../client/addop',
                    data: { "testname": name},
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                });
            }
            </script>
    }
    else
    {
        <p style="color:white"> There are No Tests Available at the moment</p>
    }
    <style>
        body {
/**/
            background-image: url(https://cdn.pixabay.com/photo/2013/07/18/10/56/microbiology-163521_960_720.jpg);
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: 100% 130%;
        }
    </style>
    <label style="color:white;">@ViewBag.Message</label>
    <form method="post" action="../client/homePage">
        <br />
        <br />
        <input type="submit" id="return" style="margin-left:48%" value="Return">
    </form>
</body>
</html>
