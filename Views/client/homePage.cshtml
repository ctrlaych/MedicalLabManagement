@{
    Layout = null;
}

@using DBLP.Models
@model DBLP.Models.Client

<!DOCTYPE html>
<html>

<link rel="shortcut icon" href="~/patient.ico">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Homepage - Patient</title>
    <link href="/Content/site.css" rel="stylesheet" />

    <script src="/Scripts/modernizr-2.6.2.js"></script>

</head>
<head>
    <script src="/Scripts/JavaScript2.js" type="text/javascript"></script>
    <link rel="stylesheet" href="~/Content/Style.css">
</head>
<body>
    <header>
        <div>
            <div>
                <ul>
                    <li style="margin-left: 160px;"><a id="len1" class="hoverable" href="@Url.Action("homePage","client")">Home</a></li>
                    <li><a id="len2" class="hoverable" href="@Url.Action("displaytest","client")">Book Appointment</a></li>
                    <li><a id="len4" class="hoverable" href="@Url.Action("deleteappoint","client")">Delete Appointment</a></li>
                    <li><a id="len7" class="hoverable" href="@Url.Action("deactive","client")">Deactivate Account</a></li>
                    <li>
                        <a id="len9" class="hoverable">View</a>
                        <ul>
                            <li><a id="op1" class="hoverable" href="@Url.Action("view_pend_appoint","client")">Pending Appointments</a></li>
                            <li><a id="op2" class="hoverable" href="@Url.Action("viewappointments","client")">Old Reports</a></li>
                            <li><a id="op3" class="hoverable" href="@Url.Action("viewreports","client")">New Reports</a></li>
                        </ul>
                    </li>
                </ul>
                <div>
                    <form method="post" action="../client/logout">
                        <input type="submit" id="logout" value="logout">
                    </form>
                </div>
            </div>
            <div class="page-title">
                <h2 style="display:inline-block; margin-left: 60%;">Patient</h2>
            </div>

        </div>
    </header>
    <style>
        body {
/**/
            background-image: url(https://cdn.pixabay.com/photo/2013/07/18/10/56/microbiology-163521_960_720.jpg);
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: 100% 130%;
        }
    </style>

    <div class="rowfirst">
        <div class="rowitem">
            <h3> Personal Information</h3>
        </div>
        <div class="originalinfo">
            <div class="columnspan">
                <p> <span style="font-weight: 300; margin-left: -5%;"><b> Name  : </b></span> <span> @Model.firstname @Model.lastname  </span>  </p>
                <p> <span style="font-weight: 300; margin-left: -106px;"><b>  Gender : </b></span> @Model.gender <span> </span> </p>
            </div>
            <div class="columnspan">
                <p> <span style="font-weight: 300;margin-left: -75%;"><b> Age : </b></span> <span> @Model.age </span> </p>
                <p> <span style="font-weight: 300; margin-left: -68%"><b> Blood Group : </b></span> <span>@Model.bloodgroup </span></p>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="rowitem">
            <h3> Contact </h3>
        </div>
        <div class="originalinfo" style="height:72px;">
            <div class="columnspan">
                <p> <span style="font-weight: 300;"><b> Address : </b></span> <span> @Model.address  </span>  </p>
            </div>
            <div class="columnspan">
                <p> <span style="font-weight: 300; margin-left: -40%;"><b> Phone Number : </b></span> <span> @Model.phone_number </span></p>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="rowitem">
            <h3> Account Information</h3>
        </div>
        <div class="originalinfo">
            <div class="columnspan">
                <p> <span style="font-weight: 300;     margin-left: -13%;"><b> Username : </b></span> <span style="text-transform:none;"> @Model.username  </span>  </p>
                <p> <span style="font-weight: 300; margin-left: 56px; "><b> Email : </b></span> <span style="text-transform:none;"> @Model.email </span> </p>
            </div>
            <div class="columnspan">
                <p> <span style="font-weight: 300;margin-left: -46%; "><b> Password : </b></span> <span style="text-transform:none;"> @Model.password </span> </p>
                <p> <span style="font-weight: 300; margin-left: -15%;"><b> Account Creation Date : </b></span> <span> @Model.Account_formation_date </span></p>
            </div>
        </div>
    </div>
</body>
</html>
